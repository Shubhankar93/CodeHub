package stringPrograms;

public class AlternateSubStringReverse {
	public static void main(String[] args) {
		String name = "I Love My India";
		String[] nameSplit = name.split(" ");
		StringBuffer newName = new StringBuffer(nameSplit[0]);
		for (int i=2; i<nameSplit.length; i++) {
			
			if (i%2 == 0) {
				StringBiulder temp = new String(nameSplit[i]) ;
				newName = newName.append(temp.rev)
			}
		}
	}
}
